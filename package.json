{
  "name": "next-amplify-starter-kit",
  "version": "1.0.0",
  "private": true,
  "description": "Next.js + AWS Amplify モノレポ・スターターキット",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf node_modules"
  },
  "keywords": [
    "next.js",
    "aws",
    "amplify",
    "cdk",
    "monorepo",
    "turborepo"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "turbo": "^2.3.3",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8.0.0"
  }
}
